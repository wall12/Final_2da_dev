<h1>Registros de Marcas</h1>

<table class="table table-bordered">
<thead class="thead-dark"><tr>
<th>ID</th>
<th>Nombre</th>
<% if user_signed_in? %>
<th colspan="2"><a href="<%= marcas_new_path %>" class="btn btn-primary"> Nuevo </a></th>
<%end %>
</tr>
<% @lista.each do |item| %>
<tr>
<td><%= item.id %></td>
<td><%= item.nombre %></td>
<% if user_signed_in? %>
<td><%= link_to 'Editar', marcas_edit_path(item.id),class: "btn btn-secondary" %></td>

<td><%= link_to 'Borrar', marcas_delete_path(item.id), method: :delete,class: "btn btn-danger"  %></td>
<% end %>
</tr>
<% end %>
</thead>
